<% if(message){ %>
<div class="registration">
  <h1 class="fail"><%= message %></h1>
</div>
<% } %>
<div class="postJob-form-container">
  <!--  -->
  <div class="title">Sending Email to the</div>

  <form action="/send-emailnotification" method="post">
    <div class="user-details">
      <div class="input-box-post-job">
        <span class="details"> Email Service</span>
        <input class="input" type="text" name="service" placeholder="e.g. gmail" value="gmail" required />
      </div>

      <div class="input-box-post-job">
        <span class="details"> Password </span>
        <input class="input" type="text" name="Password" placeholder="Password" required />
      </div>

      <div class="input-box-post-job">
        <span class="details"> Sender Email </span>
        <input class="input" type="text" name="senderEmail" value="<%= userEmail  %>" required />
      </div>

      <div class="input-box-post-job">
        <span class="details"> Receiver Gmail </span>
        <input class="input" type="text" name="receiverEmail" value="sachinbhavar@gmail.com" required />
      </div>

      <div class="input-box-post-job">
        <span class="details"> Subject</span>
        <textarea class="input" type="text" placeholder="Application to the job " name="subject" required></textarea>
      </div>

      <button class="submit-btn" type="submit">Send Email Notification</button>
    </div>
  </form>
</div>
